  font-family:Arial, sans-serif;
}

/* Boîtier */
.calculator{
  width:260px;
  padding:15px;
  border:3px solid #333;
  border-radius:15px;
}

/* Écran */
#screen{
  width:100%;
  height:45px;
  margin-bottom:15px;
  font-size:20px;
  text-align:right;
  padding-right:10px;
  border:1px solid #999;
  border-radius:5px;
}

