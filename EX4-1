<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <title>Calculatrice simple</title>
    <style>
        .container {
            width: 300px;
            padding: 15px;
            border: 1px solid #ccc;
        }
        input {
            width: 100%;
            margin-bottom: 10px;
            padding: 6px;
        }
        button {
            width: 60px;
            margin: 5px;
        }
        #resultat {
            margin-top: 10px;
            font-weight: bold;
        }
    </style>
</head>
<body>

    <div class="container">
        <input type="number" id="nb1" placeholder="Nombre 1">
        <input type="number" id="nb2" placeholder="Nombre 2">

        <div>
            <button onclick="calculer('+')">+</button>
            <button onclick="calculer('-')">−</button>
            <button onclick="calculer('*')">×</button>
            <button onclick="calculer('/')">÷</button>
        </div>

        <div id="resultat">Résultat : </div>
    </div>

    <script>
        function calculer(op) {
            const n1 = parseFloat(document.getElementById("nb1").value);
            const n2 = parseFloat(document.getElementById("nb2").value);
            const resultat = document.getElementById("resultat");

            if (isNaN(n1) || isNaN(n2)) {
                resultat.textContent = "Veuillez saisir deux nombres.";
                return;
            }

            let res;
            switch (op) {
                case '+':
                    res = n1 + n2;
                    break;
                case '-':
                    res = n1 - n2;
                    break;
                case '*':
                    res = n1 * n2;
                    break;
                case '/':
                    if (n2 === 0) {
                        resultat.textContent = "Division par zéro impossible.";
                        return;
                    }
                    res = n1 / n2;
                    break;
            }

            resultat.textContent = "Résultat : " + res;
        }
    </script>

</body>
</html>
