<html lang="fr">
<head>
<meta charset="UTF-8">
<title>Carousel d'images</title>

<style>
body{
  font-family: Arial, sans-serif;
  display: flex;
  justify-content: center;
  margin-top: 50px;
}

/* Conteneur */
.carousel{
  width: 320px;
  text-align: center;
  border: 2px solid #333;
  padding: 15px;
  border-radius: 10px;
}

/* Image */
.carousel img{
  width: 100%;
  height: 200px;
  object-fit: cover;
  border-radius: 5px;
  margin-bottom: 10px;
}

/* Boutons */
button{
  padding: 8px 15px;
  margin: 5px;
  font-size: 14px;
  cursor: pointer;
}
</style>
</head>

<body>

<div class="carousel">

  <img id="image" src="img1.jpg" alt="image">

  <div>
    <button onclick="precedent()">Précédent</button>
    <button onclick="suivant()">Suivant</button>
  </div>

</div>

<script>
let images = [
  "img1.jpg",
  "img2.jpg",
  "img3.jpg"
];

let index = 0;

function suivant(){
  index++;
  if(index >= images.length){
    index = 0;
  }
  image.src = images[index];
}

function precedent(){
  index--;
  if(index < 0){
    index = images.length - 1;
  }
  image.src = images[index];
}
</script>

</body>
