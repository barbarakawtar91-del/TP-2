<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="UTF-8">
  <title>Th√®me clair / sombre</title>

  <style>
    body {
      font-family: Arial, sans-serif;
      margin: 0;
      padding: 40px;
      transition: background-color 0.3s, color 0.3s;
    }

    /* Th√®me clair (par d√©faut) */
    body.light {
      background-color: #f5f5f5;
      color: #222;
    }

    /* Th√®me sombre */
    body.dark {
      background-color: #1e1e1e;
      color: #f5f5f5;
    }

    button {
      padding: 10px 20px;
      font-size: 16px;
      cursor: pointer;
    }

    .box {
      margin-top: 20px;
      padding: 20px;
      border-radius: 8px;
      background-color: rgba(0,0,0,0.05);
    }

    body.dark .box {
      background-color: rgba(255,255,255,0.1);
    }
  </style>
</head>

<body class="light">

  <h1>Th√®me clair / sombre</h1>
  <button id="toggleTheme">üåô Mode sombre</button>

  <div class="box">
    Ceci est un contenu de la page.
  </div>

  <script>
    const bouton = document.getElementById("toggleTheme");
    const body = document.body;

    // Charger le th√®me sauvegard√©
    const themeSauvegarde = localStorage.getItem("theme");
    if (themeSauvegarde) {
      body.className = themeSauvegarde;
      bouton.textContent =
        themeSauvegarde === "dark" ? "‚òÄÔ∏è Mode clair" : "üåô Mode sombre";
    }

    // Changement de th√®me
    bouton.addEventListener("click", () => {
      if (body.classList.contains("light")) {
        body.classList.replace("light", "dark");
        localStorage.setItem("theme", "dark");
        bouton.textContent = "‚òÄÔ∏è Mode clair";
      } else {
        body.classList.replace("dark", "light");
        localStorage.setItem("theme", "light");
        bouton.textContent = "üåô Mode sombre";
      }
    });
  </script>

</body>
</html>
