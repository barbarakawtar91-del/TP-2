      justify-content: space-between;
      align-items: center;
    }

    nav a {
      color: white;
      margin-right: 15px;
      text-decoration: none;
    }

    #menu-mobile {
      display: none;
      font-size: 20px;
      background: none;
      border: none;
      color: white;
      cursor: pointer;
    }

    #message {
      text-align: center;
      padding: 20px;
      font-weight: bold;
    }
  </style>
