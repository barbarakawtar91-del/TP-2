      <a href="#">Contact</a>
    </nav>

    <!-- Bouton menu mobile -->
    <button id="menu-mobile">â˜°</button>
  </header>

  <div id="message"></div>

  <script>
    const menuDesktop = document.getElementById("menu-desktop");
    const menuMobile = document.getElementById("menu-mobile");
    const message = document.getElementById("message");

    function adapterLayout() {
      if (window.innerWidth < 768) {
        // Mode mobile
        menuDesktop.style.display = "none";
        menuMobile.style.display = "block";
        message.textContent = "ðŸ“± Mode Mobile";
      } else {
        // Mode desktop
        menuDesktop.style.display = "block";
        menuMobile.style.display = "none";
        message.textContent = "ðŸ’» Mode Desktop";
      }
    }

    // ExÃ©cution au chargement
    adapterLayout();

    // Ã‰coute du redimensionnement
    window.addEventListener("resize", adapterLayout);
  </script>

</body>
