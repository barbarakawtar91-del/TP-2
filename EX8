<body>
    <div class="container">
        <h1>üñ±Ô∏è √âv√©nements de Souris</h1>
        
        <div class="hover-box" id="hoverBox">
            Passez la souris ici !
        </div>

        <div class="info">
            <p>Passez votre souris sur la bo√Æte pour voir le changement de couleur</p>
            <p class="status" id="status">√âtat : En attente...</p>
        </div>
    </div>

    <script>
        const box = document.getElementById('hoverBox');
        const status = document.getElementById('status');

        // Couleur d'origine
        const originalColor = '#3498db';
        
        // Couleur au survol
        const hoverColor = '#e74c3c';

        // √âv√©nement mouseenter (quand la souris entre dans la div)
        box.addEventListener('mouseenter', function() {
            box.style.backgroundColor = hoverColor;
            box.style.transform = 'scale(1.05)';
            box.textContent = ' Couleur chang√©e !';
            status.textContent = '√âtat : Souris sur la bo√Æte';
        });

        // √âv√©nement mouseleave (quand la souris quitte la div)
        box.addEventListener('mouseleave', function() {
            box.style.backgroundColor = originalColor;
            box.style.transform = 'scale(1)';
            box.textContent = 'Passez la souris ici !';
            status.textContent = '√âtat : Souris hors de la bo√Æte';
        });

        // Bonus : √©v√©nement mousedown (clic)
        box.addEventListener('mousedown', function() {
            box.style.transform = 'scale(0.95)';
        });

        // Bonus : √©v√©nement mouseup (rel√¢chement du clic)
        box.addEventListener('mouseup', function() {
            box.style.transform = 'scale(1.05)';
        });
    </script>
